                        <Spinner
                            android:id="@+id/tcvsl00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--tcvsl01-->
                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view_wt_bound">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/tcvsl01" />

                        <Spinner
                            android:id="@+id/tcvsl01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp" />

                        <EditText
                            android:id="@+id/tcvsl01_name"
                            style="@style/EditText"
                            android:visibility="gone" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!--tcvsl02-->
